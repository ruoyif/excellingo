<%- include header %>
<div class="container">
    <form class="col-sm-offset-4 col-sm-4 form-horizontal" role="form" method="post">
        <fieldset>
        <% if(locals.islogin) { %>
           User: <h3> <%= test %></h3>Already logined in<br>
           <a class="btn" href="/logout">Log out</a>
            <% } else{ %>
                <form>
                    <input type="radio" name="identity" value="tutor">I'm a tutor<br>
                    <input type="radio" name="identity" value="student">I'm a student
                </form>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="username">Email</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Email" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="password">Password</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
            <% } %>
        </fieldset>
    </form>
</div>
<%- include footer %>